{
    "manifestVersion": 1,
    "id": "dynamics365-news-widget",
    "version": "1.0.0.1",
    "name": "Dynamics 365 news",
    "description": "Widget to display Dynamics 365 news",
    "publisher": "HuyTran86",
    "targets": [
        {
            "id": "Microsoft.VisualStudio.Services"
        }
    ],
    "categories": [
        "Azure Boards"
    ],
    "icons": {
        "default": "img/logo.png"
    },
    "contributions": [
        {
            "id": "Dynamics365NewsWidget",
            "type": "ms.vss-dashboards-web.widget",
            "targets": [
                "ms.vss-dashboards-web.widget-catalog",
                "HuyTran86.dynamics365-news-widget.Dynamics365NewsWidget.Configuration"
            ],
            "properties": {
                "name": "Dynamics 365 news widget",
                "description": "Dynamics 365 news widget",
                "catalogIconUrl": "img/logo.png",
                "previewImageUrl": "img/logo.png",
                "uri": "index.html",
                "supportedSizes": [
                    {
                        "rowSpan": 2,
                        "columnSpan": 2
                    },
                    {
                        "rowSpan": 1,
                        "columnSpan": 1
                    }
                ],
                "supportedScopes": [
                    "project_team"
                ]
            }
        },
        {
            "id": "Dynamics365NewsWidget.Configuration",
            "type": "ms.vss-dashboards-web.widget-configuration",
            "targets": [
                "ms.vss-dashboards-web.widget-configuration"
            ],
            "properties": {
                "name": "Dynamics365NewsWidget Configuration",
                "description": "Configures Dynamics365NewsWidget",
                "uri": "configuration.html"
            }
        }
    ],
    "files": [
        {
            "path": "index.html",
            "addressable": true
        },
        {
            "path": "scripts",
            "addressable": true
        },
        {
            "path": "configuration.html",
            "addressable": true
        },
        {
            "path": "img",
            "addressable": true
        }
    ]
}
