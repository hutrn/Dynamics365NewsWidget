{
    "manifestVersion": 1,
    "id": "dynamics-crm-news-widget",
    "version": "1.0.11",
    "name": "Dynamics CRM news widget",
    "description": "Widget to display Dynamics CRM news",
    "publisher": "HuyTran86",
    "targets": [
        {
            "id": "Microsoft.VisualStudio.Services"
        }
    ],
    "categories": [
        "Azure Boards"
    ],
    "icons": {
        "default": "img/logo.png"
    },
    "contributions": [
        {
            "id": "DynamicsCrmNewsWidget",
            "type": "ms.vss-dashboards-web.widget",
            "targets": [
                "ms.vss-dashboards-web.widget-catalog",
                "HuyTran86.dynamics-crm-news-widget.DynamicsCrmNewsWidget.Configuration"
            ],
            "properties": {
                "name": "Dynamics CRM news widget",
                "description": "Dynamics CRM news widget",
                "catalogIconUrl": "img/logo.png",
                "previewImageUrl": "img/logo.png",                            
                "uri": "index.html",
                "supportedSizes": [
                     {
                            "rowSpan": 2,
                            "columnSpan": 2
                        },
                        {
                            "rowSpan": 1,
                            "columnSpan": 1
                        }
                    ],
                "supportedScopes": ["project_team"]
            }
        },
        {
            "id": "DynamicsCrmNewsWidget.Configuration",
            "type": "ms.vss-dashboards-web.widget-configuration",
            "targets": [ "ms.vss-dashboards-web.widget-configuration" ],
            "properties": {
                "name": "Dynamics Crm News Widget Configuration",
                "description": "Configures Dynamics Crm News Widget",
                "uri": "configuration.html"
            }
        }
    ],
    "files": [
        {
            "path": "index.html", "addressable": true
        },
        {
            "path": "configuration.html", "addressable": true
        },        
        {
            "path": "scripts", "addressable": true
        },
        {
            "path": "img", "addressable": true
        }
    ]
}
